{
  "manifest_version": 3,
  "name": "RUB Prices",
  "short_name": "RUB Prices",
  "description": "Автоматически конвертирует цену в карточке товара из евро в рубли",
  "version": "2.3",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
      "storage",
      "tabs"
  ],
  "host_permissions": [
      "*://*.dm.de/*",
      "*://*.zara.com/de/*"
  ],
  "content_scripts": [
      {
          "matches": [
              "*://*.dm.de/*",
              "*://*.zara.com/de/*"
          ],
          "css": ["styles.css"],
          "js": ["content.js"],
          "run_at": "document_end"
      }
  ]
}